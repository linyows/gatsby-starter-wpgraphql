{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./types/**/*", "./src/**/*"],
  "exclude": ["node_modules"]
}
